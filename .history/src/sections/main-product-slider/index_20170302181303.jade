.products-slider.owl-carousel.js-product-slider    
    for product in products
        .products-slider-item
            .products-slider-item__panel
                button.item
                    i.icon.icon__heart--black
                button.item
                    i.icon.icon__graf--black
            .products-slider-item__image
                +image(product.image)
            .products-slider-item__content
                .articul Артикул: #{product.articul}
                .name= product.name
                .price
                    .price__value #{product.price} руб.
                    button.price__basket
                        i.icon.icon__basket--white--large
                .property
                    .property__title Размер:
                    .property__list.change-size
